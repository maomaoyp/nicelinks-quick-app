{
  "package": "com.application.nicelinks",
  "name": "倾城之链 | NICE LINKS",
  "versionName": "1.0.0",
  "versionCode": "1",
  "minPlatformVersion": "100",
  "icon": "/assets/images/logo.png",
  "features": [
    { "name": "system.prompt" },
    { "name": "system.router" },
    { "name": "system.shortcut" },
    { "name": "system.webview" },
    { "name": "service.share" },
    { "name": "@system.fetch" }
  ],
  "permissions": [
    { "origin": "*" }
  ],
  "config": {
    "logLevel": "debug",
    "designWidth": 800
  },
  "router": {
    "entry": "pages/Main",
    "pages": {
      "pages/Main": {
        "component": "index"
      },
      "pages/NiceDetail": {
        "component": "index"
      },
      "pages/About": {
        "component": "index"
      }
    }
  },
  "display": {
    "titleBarBackgroundColor": "#f2f2f2",
    "titleBarTextColor": "#333333",
    "menu": true,
    "pages": {
      "pages/Main": {
        "titleBarText": "倾城之链",
        "menu": true
      },
      "pages/NiceDetail": {
        "titleBarText": "倾城详情"
      },
      "pages/About": {
        "menu": false
      }
    }
  }
}